{
  "name": "@legitatx/webpack-extension-reloader",
  "version": "1.1.6",
  "private": false,
  "description": "Watch for changes and force the reload of the browser extension",
  "main": "dist/webpack-extension-reloader.js",
  "bin": "./dist/webpack-extension-reloader-cli.js",
  "types": "typings/webpack-extension-reloader.d.ts",
  "repository": {
    "type": "git",
    "url": "git://github.com/SimplifyJobs/webpack-extension-reloader.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "yarn lint:files",
      "yarn format:files",
      "git add"
    ]
  },
  "scripts": {
    "build": "NODE_ENV=production webpack",
    "test": "NODE_ENV=test webpack && mocha dist/tests.js",
    "analyze": "NODE_ENV=production webpack --env.analyze",
    "start:dev": "NODE_ENV=development webpack --watch",
    "start:sample": "NODE_ENV=development webpack --config sample/webpack.plugin.js --watch",
    "prepublishOnly": "yarn build",
    "lint": "tslint \"{src,client,typings,specs}/**/*.ts\" --fix --format codeFrame",
    "format": "prettier --write \"{src,client,typings,specs}/**/*.ts\"",
    "lint:files": "tslint --fix --format codeFrame",
    "format:files": "prettier --write"
  },
  "author": "Rubens Pinheiro Gon√ßalves Cavalcante",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SimplifyJobs/webpack-extension-reloader/issues"
  },
  "homepage": "https://github.com/SimplifyJobs/webpack-extension-reloader#readme",
  "keywords": [
    "webpack",
    "plugin",
    "browser",
    "extension",
    "WebExtensions",
    "hot-reload"
  ],
  "dependencies": {
    "@types/webpack": "^5.28.0",
    "@types/webpack-sources": "^2.1.0",
    "colors": "^1.4.0",
    "lodash": "^4.17.21",
    "minimist": "^1.2.5",
    "useragent": "^2.3.0",
    "webextension-polyfill": "^0.8.0",
    "webpack-sources": "^2.3.0",
    "ws": "^7.5.0"
  },
  "peerDependencies": {
    "webpack": "^5.36.2"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-proposal-logical-assignment-operators": "^7.14.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.14.7",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-regenerator": "^7.14.5",
    "@babel/polyfill": "^7.6.0",
    "@babel/preset-env": "^7.14.7",
    "@types/chai": "^4.2.19",
    "@types/colors": "^1.2.1",
    "@types/lodash": "^4.14.170",
    "@types/minimist": "^1.2.1",
    "@types/mocha": "^8.2.2",
    "@types/sinon": "^10.0.2",
    "@types/useragent": "^2.3.0",
    "@types/ws": "^7.4.5",
    "autoprefixer": "^10.2.6",
    "babel-loader": "^8.2.2",
    "chai": "^4.3.4",
    "copy-webpack-plugin": "^8.1.1",
    "css-loader": "^5.2.6",
    "husky": "^6.0.0",
    "json-loader": "^0.5.7",
    "lint-staged": "^11.0.0",
    "mini-css-extract-plugin": "^1.6.0",
    "mocha": "^9.0.1",
    "prettier": "^2.3.1",
    "raw-loader": "^4.0.2",
    "sinon": "^11.1.1",
    "source-map-support": "^0.5.19",
    "style-loader": "^3.0.0",
    "ts-loader": "^9.2.3",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.3.4",
    "webpack": "5.36.2",
    "webpack-bundle-analyzer": "^4.4.2",
    "webpack-cli": "^4.6.0"
  }
}
